{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EvoNash Communication Protocol",
  "description": "JSON Schema for communication between Next.js Controller and Python Worker",
  "definitions": {
    "JobRequest": {
      "type": "object",
      "required": ["job_id", "experiment_id", "generation_id", "agent_ids", "match_type", "num_batches", "batch_size", "experiment_config"],
      "properties": {
        "job_id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique identifier for the job"
        },
        "experiment_id": {
          "type": "string",
          "format": "uuid",
          "description": "Identifier for the experiment"
        },
        "generation_id": {
          "type": "string",
          "format": "uuid",
          "description": "Identifier for the current generation"
        },
        "agent_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          },
          "description": "List of agent UUIDs to use in matches"
        },
        "match_type": {
          "type": "string",
          "enum": ["self_play", "benchmark"],
          "description": "Type of match to run"
        },
        "num_batches": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of batches to run"
        },
        "batch_size": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of matches per batch"
        },
        "experiment_config": {
          "type": "object",
          "description": "Full experiment configuration"
        }
      }
    },
    "JobResult": {
      "type": "object",
      "required": ["job_id", "experiment_id", "matches", "generation_stats"],
      "properties": {
        "job_id": {
          "type": "string",
          "format": "uuid"
        },
        "experiment_id": {
          "type": "string",
          "format": "uuid"
        },
        "matches": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "agent_a_id": {
                "type": "string",
                "format": "uuid"
              },
              "agent_b_id": {
                "type": "string",
                "format": "uuid"
              },
              "winner_id": {
                "type": "string",
                "format": "uuid"
              },
              "move_history": {
                "type": "array"
              },
              "telemetry": {
                "type": "object"
              }
            }
          }
        },
        "generation_stats": {
          "type": "object",
          "required": ["avg_fitness", "avg_elo", "peak_elo", "policy_entropy", "entropy_variance", "population_diversity", "mutation_rate"],
          "properties": {
            "avg_fitness": {
              "type": "number"
            },
            "avg_elo": {
              "type": "number"
            },
            "peak_elo": {
              "type": "number"
            },
            "policy_entropy": {
              "type": "number"
            },
            "entropy_variance": {
              "type": "number"
            },
            "population_diversity": {
              "type": "number"
            },
            "mutation_rate": {
              "type": "number"
            }
          }
        }
      }
    },
    "ExperimentConfig": {
      "type": "object",
      "required": ["experiment_id", "experiment_name", "mutation_mode", "random_seed", "population_size", "max_generations", "network_architecture", "experiment_group"],
      "properties": {
        "experiment_id": {
          "type": "string",
          "format": "uuid"
        },
        "experiment_name": {
          "type": "string"
        },
        "mutation_mode": {
          "type": "string",
          "enum": ["STATIC", "ADAPTIVE"],
          "description": "Derived from experiment_group: CONTROL→STATIC, EXPERIMENTAL→ADAPTIVE. STATIC uses fixed rate ε=0.05. ADAPTIVE uses fitness-scaled ε = Base × (1 - CurrentElo/MaxElo)."
        },
        "mutation_rate": {
          "type": "number",
          "description": "For STATIC mode"
        },
        "mutation_base": {
          "type": "number",
          "description": "For ADAPTIVE mode"
        },
        "max_possible_elo": {
          "type": "number",
          "default": 2000.0
        },
        "random_seed": {
          "type": "integer"
        },
        "population_size": {
          "type": "integer",
          "minimum": 1
        },
        "selection_pressure": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.2
        },
        "max_generations": {
          "type": "integer",
          "minimum": 1
        },
        "ticks_per_generation": {
          "type": "integer",
          "minimum": 1,
          "default": 750,
          "description": "Number of simulation ticks per generation. A tick is one discrete simulation step (dt=0.016s) where agent physics, neural network decisions, collisions, and food respawning are processed. At 750 ticks, each generation represents ~12 seconds of simulated agent lifetime."
        },
        "network_architecture": {
          "type": "object",
          "required": ["input_size", "hidden_layers", "output_size"],
          "properties": {
            "input_size": {
              "type": "integer"
            },
            "hidden_layers": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            "output_size": {
              "type": "integer"
            }
          }
        },
        "experiment_group": {
          "type": "string",
          "enum": ["CONTROL", "EXPERIMENTAL"],
          "description": "Experiment group determines mutation strategy: CONTROL uses STATIC mutation (fixed ε=0.05), EXPERIMENTAL uses ADAPTIVE mutation (fitness-scaled ε)."
        }
      }
    }
  }
}
